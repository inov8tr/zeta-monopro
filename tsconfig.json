{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/zetaonline/*"],
      "@zetamonopro/supabase": ["packages/supabase/src/index.ts"],
      "@zetamonopro/supabase/*": ["packages/supabase/src/*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["apps", "packages"]
}
