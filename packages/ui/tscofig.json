{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "jsx": "preserve",
      "incremental": true,
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "types": ["node", "react", "react-dom"]
    },
    "include": [
      "src/**/*"
    ]
  }
  